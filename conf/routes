# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# View a community
GET     /community/:prefix/:id              controllers.Application.showCommunity(prefix: String, id: String)

# View a collection
GET     /collection/:prefix/:id              controllers.Application.showCollection(prefix: String, id: String)

# View an Item
GET     /item/:prefix/:id              controllers.Application.showItem(prefix: String, id: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
