# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                      controllers.Application.index()

### Communities
GET        /communities             controllers.Communities.index()
GET        /communities/:id         controllers.Communities.show(id: Long)


### Collections
GET        /collections/:id        controllers.Application.showCollection(id: Long)

### Items
GET        /item/:id              controllers.Application.showItem(id: Long)

### Bitstreams

### Actions
# Test
# Login
# Logout

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file          controllers.Assets.at(path="/public", file)
GET        /robots.txt            controllers.Assets.at(path="/public", file = "robots.txt")
